{
  "name": "fec-tokyo.github.io",
  "description": "FEC Tokyo Official Website",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fec-tokyo/fec-tokyo.github.io/issues"
  },
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "check": "astro check",
    "eslint": "eslint --fix 'src/**/*.{astro,js,ts}'",
    "format": "prettier --write --ignore-unknown src/**/*.astro",
    "serve": "serve dist -p 3000",
    "prescreenshots": "astro build",
    "screenshots": "playwright test",
    "markuplint": "markuplint src/**/*.astro",
    "markuplint:dist": "npm run build && markuplint 'dist/**/*.html'",
    "stylelint": "stylelint --fix 'src/**/*.{astro,css}'",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "astro": "^5.12.8",
    "lightningcss": "^1.30.1",
    "typescript": "^5.9.2"
  },
  "volta": {
    "node": "24.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@markuplint/astro-parser": "^4.6.21",
    "@playwright/test": "^1.54.2",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-plugin-astro": "^1.3.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "markuplint": "^4.13.1",
    "playwright": "^1.54.2",
    "postcss-html": "^1.8.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "serve": "^14.2.4",
    "stylelint": "^16.23.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recess-order": "^7.2.0",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-order": "^7.0.0",
    "stylelint-prettier": "^5.0.3"
  },
  "lint-staged": {
    "*.{js,ts,astro}": [
      "npm run eslint",
      "npm run format"
    ],
    "*.{astro,css}": [
      "npm run stylelint"
    ],
    "*.astro": [
      "npm run check",
      "npm run markuplint"
    ]
  }
}
