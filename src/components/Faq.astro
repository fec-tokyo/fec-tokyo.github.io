---
import SectionTitle from "@/components/SectionTitle.astro";
import ShixkuiBg from "@/components/ShixkuiBg.astro";
import { FAQ_LIST } from "@/data/faq";
---

<section id="faq" class="faq">
  <ShixkuiBg />
  <div class="container">
    <SectionTitle en="FAQ" ja="よくあるご質問" sectionId="faq" />
    <ul class="list">
      {
        FAQ_LIST.map((faq) => (
          <list class="item">
            <div class="question">
              <span class="prefix">Q.</span>
              {faq.question}
            </div>
            <div class="answer">{faq.answer}</div>
          </list>
        ))
      }
    </ul>
  </div>
</section>

<style>
  @import "../css/vars.css";
  @import "../css/utils.css";

  .faq {
    position: relative;
  }

  .container {
    max-width: 1016px;
    padding: 80px 16px 0;
    margin: 0 auto;
    isolation: isolate;
  }

  .list {
    display: flex;
    flex-direction: column;
    gap: 8px;
    padding: 12px;
    margin-top: 24px;
    margin-bottom: 0;
    background-color: rgba(255, 255, 255, 0.08);
    border-radius: 12px;
  }

  .item {
    display: flex;
    gap: 56px;
    align-items: center;
    justify-content: space-between;
    padding: 32px;
    font-family: var(--font-noto-sans-jp);
    letter-spacing: 0.03em;
    background-color: var(--bg-dark);
    border-radius: 12px;
  }
  .question {
    display: flex;
    gap: 8px;
    min-width: 360px;
    font-size: 20px;
    letter-spacing: 0.02em;
  }
  .answer {
    line-height: 1.6;
  }

  @media (--breakpoint-sp) {
    .item {
      flex-direction: column;
      gap: 6px;
      align-items: start;
      padding: 24px;
    }
    .question {
      min-width: auto;
      font-size: 16px;
    }
    .answer {
      font-size: 14px;
    }
  }
</style>
