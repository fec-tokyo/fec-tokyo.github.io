---
import { Image } from "astro:assets";
import LogoImage from "@/assets/colored-logo.svg";
import Button from "@/components/Button.astro";
import EventNameImage from "@/assets/event-name-en.svg";
import FooterPersonImage from "@/assets/footer-person.png";
import TrafficImage from "@/assets/footer-traffic.png";
import SnsLinks from "./SnsLinks.astro";

const BOTTOM_LINKS = [
  {
    href: "#timetable",
    text: "タイムテーブル",
  },
  {
    href: "#sponsors",
    text: "スポンサー一覧",
  },
  {
    href: "#faq",
    text: "よくあるご質問",
  },
  {
    href: "https://docs.google.com/document/d/1kzUGfkN5P77_4nmOCCZ7jJZcsGdMD44UIZtSLQMIEPI/edit?usp=sharing",
    text: "プライバシーポリシー",
  },
  {
    href: "https://docs.google.com/document/d/1pyHpjW8yNUDqbZa2p57PjCuEkYn6jWPCNPEQ3PWAq7o/edit?usp=sharing",
    text: "行動規範",
  },
];
---

<footer class="footer">
  <div class="contents">
    <div class="top">
      <div class="topInner">
        <div class="topLinks">
          <div class="topLogo">
            <Image src={LogoImage} alt="" width={64} height={64} class="logo" />
            <Image
              src={EventNameImage}
              alt="Frontend Conference Tokyo"
              width={108}
              height={44}
              class=""
            />
          </div>
          <SnsLinks
            xId="fec_tokyo"
            hasNote={true}
            noteId="fec_tokyo"
            size="large"
          />
        </div>
        <div class="topButtons">
          <Button href="https://fec-tokyo.connpass.com/event/352581/">
            Connpassで参加申込する
          </Button>
          <Button
            href="https://x.com/intent/post?url=https%3A%2F%2Fx.com%2Ffec_tokyo/"
            isGradated={false}
          >
            Xで参加をシェアする
          </Button>
        </div>
      </div>
    </div>
    <div class="bottom">
      <ul class="bottomLinks">
        {
          BOTTOM_LINKS.map((link) => (
            <li class="">
              <a class="bottomLink" href={link.href}>
                {link.text}
              </a>
            </li>
          ))
        }
      </ul>
      <p class="copyright">©フロントエンドカンファレンス東京実行委員会</p>
    </div>
  </div>
  <div class="bg">
    <Image src={TrafficImage} alt="" class="traffic" layout="full-width" />
    <Image
      src={FooterPersonImage}
      alt=""
      width={68}
      height={52}
      class="person"
    />
  </div>
</footer>

<style>
  @import "../css/vars.css";
  @import "../css/utils.css";

  .footer {
    position: relative;
    font-family: var(--font-noto-sans-jp);
  }

  .contents {
    max-width: 992px;
    padding: 120px 16px 0;
    margin: 0 auto;
    isolation: isolate;
  }
  .topInner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-bottom: 32px;
  }
  .top::after {
    display: block;
    width: 100%;
    height: 1px;
    content: "";
    background-color: #fff;
  }
  .topLinks {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }
  .topLogo {
    display: flex;
    gap: 8px;
    align-items: center;
  }
  .eventName {
    font-size: 11px;
    font-weight: bold;
    text-align: left;
    letter-spacing: 0.03em;
  }
  .topSocialLinks {
    display: flex;
    gap: 8px;
    align-items: center;
  }
  .topSocialLink {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    padding: 4px;
    background-color: #fff;
    border-radius: 8px;
  }
  .topButtons {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }
  .apply {
    width: 100%;
  }
  .bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 32px 0;
    font-size: 12px;
  }
  .bottomLinks {
    display: flex;
    gap: 24px;
  }
  .bottomLink {
    line-height: 1.4;
    color: #fff;
    letter-spacing: 0.03em;
    text-decoration: none;
  }

  .bg {
    position: relative;
    height: 240px;
  }
  .traffic {
    height: 100%;
    mix-blend-mode: soft-light;
  }

  .person {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }
  .traffic,
  .person {
    position: absolute;
  }

  @media (--breakpoint-sp) {
    .contents {
      padding-top: 80px;
    }
    .topInner {
      flex-direction: column;
      gap: 24px;
      align-items: start;
      padding-bottom: 30px;
    }
    .topButtons {
      align-self: stretch;
    }
    .bottom {
      flex-direction: column;
      gap: 16px;
      align-items: start;
      padding: 24px 0;
    }

    .bottomLinks {
      flex-wrap: wrap;
      gap: 16px;
    }
    .bg {
      height: 160px;
    }
  }
</style>
