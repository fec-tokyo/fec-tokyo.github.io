---
import { Image } from "astro:assets";
import LogoImage from "@/assets/colored-logo.svg";
import XLogoImage from "@/assets/x-logo.svg";
import GitHubLogoImage from "@/assets/github-logo.svg";
import ShixkuiBg from "@/components/ShixkuiBg.astro";
import Button from "@/components/Button.astro";
import EventNameImage from "@/assets/event-name-en.svg";
import FooterPersonImage from "@/assets/footer-person.png";

const BOTTOM_LINKS = [
  {
    href: "/",
    text: "タイムテーブル",
  },
  {
    href: "/",
    text: "スポンサー一覧",
  },
  {
    href: "/",
    text: "よくあるご質問",
  },
  {
    href: "/",
    text: "プライバシーポリシー",
  },
  {
    href: "/",
    text: "行動規範",
  },
];
---

<footer class="footer">
  <ShixkuiBg />
  <div class="contents">
    <div class="top">
      <div class="topInner">
        <div class="topLinks">
          <div class="topLogo">
            <Image src={LogoImage} alt="" width={64} height={64} class="logo" />
            <Image
              src={EventNameImage}
              alt="Frontend Conference Tokyo"
              width={108}
              height={44}
              class=""
            />
          </div>
          <ul class="topSocialLinks">
            <li>
              <a
                href="/"
                target="_blank"
                rel="noopener noreferrer"
                class="topSocialLink"
              >
                <XLogoImage width={24} height={24} />
              </a>
            </li>
            <li>
              <a
                href="/"
                target="_blank"
                rel="noopener noreferrer"
                class="topSocialLink"
              >
                <GitHubLogoImage width={28} height={28} />
              </a>
            </li>
          </ul>
        </div>
        <div class="topButtons">
          <Button href="/"> Connpassで参加申込する </Button>
          <Button href="/" isOutlined> Xで参加をシェアする </Button>
        </div>
      </div>
    </div>
    <div class="bottom">
      <ul class="bottomLinks">
        {
          BOTTOM_LINKS.map((link) => (
            <li class="">
              <a class="bottomLink" href={link.href}>
                {link.text}
              </a>
            </li>
          ))
        }
      </ul>
      <p class="copyright">©FEC TOKYO</p>
    </div>
  </div>
</footer>
<div class="bg">
  <div class="tile"></div>
  <div class="traffic"></div>
  <Image src={FooterPersonImage} alt="" width={68} height={52} class="person" />
</div>

<style>
  @import "../css/vars.css";
  @import "../css/utils.css";

  .footer {
    position: relative;
    font-family: var(--font-noto-sans-jp);
  }

  .contents {
    max-width: 992px;
    padding: 120px 16px 0;
    margin: 0 auto;
  }
  .topInner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-bottom: 30px;
  }
  .top::after {
    display: block;
    width: 100%;
    height: 1px;
    content: "";
    background-color: #fff;
  }
  .topLinks {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }
  .topLogo {
    display: flex;
    gap: 8px;
    align-items: center;
  }
  .eventName {
    font-size: 11px;
    font-weight: bold;
    text-align: left;
    letter-spacing: 0.03em;
  }
  .topSocialLinks {
    display: flex;
    gap: 8px;
    align-items: center;
  }
  .topSocialLink {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    padding: 4px;
    background-color: #fff;
    border-radius: 8px;
  }
  .topButtons {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }
  .apply {
    width: 100%;
  }
  .bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 30px 0;
    font-size: 12px;
  }
  .bottomLinks {
    display: flex;
    gap: 24px;
  }
  .bottomLink {
    line-height: 1.3;
    color: #fff;
    letter-spacing: 0.03em;
    text-decoration: none;
  }

  .bg {
    position: relative;
    height: 240px;
    isolation: isolate;
  }

  .traffic,
  .tile {
    position: absolute;
    width: 100%;
    height: 100%;
    mix-blend-mode: soft-light;
  }
  .traffic {
    background: url("../assets/footer-traffic.png") center center / cover
      no-repeat;
  }
  .tile {
    background:
      linear-gradient(rgba(4, 31, 48, 0.999), rgba(4, 31, 48, 0.999)),
      url("../assets/kv-shikxui-bg.png") center center / cover no-repeat;
  }

  .person {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  @media (--breakpoint-sp) {
    .topInner {
      flex-direction: column;
      gap: 24px;
      align-items: start;
      padding-bottom: 30px;
    }
    .topButtons {
      align-self: stretch;
    }
    .bottom {
      flex-direction: column;
      gap: 16px;
      align-items: start;
      padding: 24px 0;
    }

    .bottomLinks {
      flex-wrap: wrap;
      gap: 16px;
    }
  }
</style>
