---
import { Image } from "astro:assets";
import ApplyImage from "@/assets/kv-apply.svg";
import EventNameImage from "@/assets/kv-event-name.svg";
import LogoImage from "@/assets/kv-logo.svg";
---

<section id="kv" class="container">
  <div class="content">
    <Image src={LogoImage} width={200} height={200} alt="" class="logo" />
    <h1>
      <Image
        src={EventNameImage}
        width={172}
        height={315}
        class="eventName"
        alt="フロントエンドカンファレンストウキョウ"
      />
    </h1>
    <div class="eventInfo">
      <span class="location">In Shibuya, Tokyo - Abema Towers</span>
      <span class="datetime">2025.09.21 SUN 12:00 - 19:00</span>
    </div>
  </div>
  <a href="#apply" class="apply">
    <Image src={ApplyImage} width={200} height={200} alt="応募する" />
  </a>
</section>

<style lang="scss">
  .container {
    position: relative;
    width: 100%;
    height: 1842px;
    overflow: hidden;
    background: url("../assets/kv-background.png") center/cover no-repeat;

    @include mixin.media-sp {
      height: 1067px;
      background: url("../assets/kv-background-sp.png") center/cover no-repeat;
    }
  }

  .content {
    position: absolute;
    top: 160px;
    left: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #fff;
    text-align: center;
    transform: translateX(-50%);

    @include mixin.media-sp {
      top: 144px;
    }
  }

  .logo {
    @include mixin.media-sp {
      width: 144px;
      height: 144px;
    }
  }

  .eventName {
    margin-top: 32px;

    @include mixin.media-sp {
      width: 120px;
      height: 220px;
      margin-top: 24px;
    }
  }

  .eventInfo {
    display: flex;
    flex-direction: column;
    gap: 12px;
    align-items: center;
    margin-top: 64px;

    @include mixin.media-sp {
      margin-top: 48px;
    }

    .location,
    .datetime {
      font-family: "Barlow Condensed", sans-serif;
      font-size: 20px;
      font-weight: bold;
      line-height: 1;
      letter-spacing: 0.01em;
      text-wrap: nowrap;
      text-shadow: 0 2px 4px rgb(0 0 0 / 70%);

      @include mixin.media-sp {
        letter-spacing: 0.001em;
      }
    }
  }

  .apply {
    position: fixed;
    right: 40px;
    bottom: 40px;
    z-index: var.$apply-button-z-index;
    display: inline-block;
    border-radius: 50%;
    transition:
      transform 0.2s ease,
      outline 0.2s ease;

    @include mixin.media-sp {
      display: none;
    }

    &:hover {
      transform: scale(1.05);
    }
  }
</style>
