---
import SectionTitle from "@/components/SectionTitle.astro";
import ShixkuiBg from "@/components/ShixkuiBg.astro";
import { ORGANIZERS } from "@/data/organizers";
import { Image } from "astro:assets";
import SnsLinks from "./SnsLinks.astro";
---

<section id="organizers" class="container">
  <ShixkuiBg />
  <div class="wrapper">
    <SectionTitle en="Organizers" ja="スタッフ一覧" sectionId="organizers" />
    <div class="organizerTypes">
      <div class="authors">
        <div class="organizerType">Author</div>
        <div class="authorInfoWrapper">
          <div class="authorInfo">
            <Image
              src={ORGANIZERS.author[0].image}
              alt={ORGANIZERS.author[0].name}
              width={280}
              height={280}
              class="organizerIcon"
            />
            <div class="authorDetail">
              <p class="authorName">{ORGANIZERS.author[0].id}</p>
              <SnsLinks
                xLink={ORGANIZERS.author[0].socialLinks[0].url}
                githubLink={ORGANIZERS.author[0].socialLinks[1].url}
                size="small"
              />
              <div class="authorMessagePc">
                <p class="messageTitle">Message</p>
                <p class="messageDetail">
                  {
                    ORGANIZERS.author[0].message?.map((message) => (
                      <span class="messageDetailItem">{message}</span>
                    ))
                  }
                </p>
              </div>
            </div>
          </div>
          <div class="authorMessageSp">
            <p class="messageTitle">Message</p>
            <p class="messageDetail">
              {
                ORGANIZERS.author[0].message?.map((message) => (
                  <span class="messageDetailItem">{message}</span>
                ))
              }
            </p>
          </div>
        </div>
      </div>
      <div>
        <div class="organizerType">
          <div class="organizerTypeText">CFP Reviewers</div>
        </div>
        <div class="organizers">
          {
            ORGANIZERS.cfpReviews.map((organizer) => (
              <div class="organizer">
                <Image
                  src={organizer.image}
                  alt={organizer.name}
                  width={120}
                  height={120}
                  class="organizerIcon"
                />
                <div class="organizerDetail">
                  <p class="organizerName">{organizer.name}</p>
                  <p class="organizerId">@{organizer.id}</p>
                  <div class="snsLinksWrapper">
                    <SnsLinks
                      xLink={organizer.socialLinks[0].url}
                      githubLink={organizer.socialLinks[1].url}
                      size="small"
                    />
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
      <div>
        <div class="organizerType">
          <div class="organizerTypeText">Staff</div>
        </div>
        <div class="organizers">
          {
            ORGANIZERS.staff.map((organizer) => (
              <div class="organizer">
                <Image
                  src={organizer.image}
                  alt={organizer.name}
                  width={120}
                  height={120}
                  class="organizerIcon"
                />
                <div class="organizerDetail">
                  <p class="organizerName">{organizer.name}</p>
                  <p class="organizerId">@{organizer.id}</p>
                  <div class="snsLinksWrapper">
                    <SnsLinks
                      xLink={organizer.socialLinks[0].url}
                      githubLink={organizer.socialLinks[1].url}
                      size="small"
                    />
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
      <div>
        <div class="organizerType">
          <div class="organizerTypeText">Designer</div>
        </div>
        <div class="organizers">
          {
            ORGANIZERS.designer.map((organizer) => (
              <div class="organizer">
                <Image
                  src={organizer.image}
                  alt={organizer.name}
                  width={120}
                  height={120}
                  class="organizerIcon"
                />
                <div class="organizerDetail">
                  <p class="organizerName">{organizer.name}</p>
                  <p class="organizerId">{organizer.id}</p>
                  <div class="snsLinksWrapper">
                    <SnsLinks
                      xLink={organizer.socialLinks[0].url}
                      githubLink={organizer.socialLinks[1].url}
                      size="small"
                    />
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @import "../css/vars.css";
  @import "../css/utils.css";

  .container {
    position: relative;
  }
  .wrapper {
    max-width: 992px;
    padding: 80px 16px 0;
    margin: 0 auto;
    isolation: isolate;
  }
  .authors {
    margin-top: 8px;
  }
  .organizerTypes {
    display: flex;
    flex-direction: column;
  }
  .organizerType {
    position: relative;
    display: flex;
    gap: 16px;
    align-items: center;
    margin-top: 20px;
    font-size: 32px;
    font-weight: bold;
  }
  .organizerTypeText {
    flex-shrink: 0;
  }
  .organizerType::after {
    display: block;
    width: 100%;
    height: 1px;
    content: "";
    background-color: #fff;
  }
  .authorInfo {
    display: flex;
    gap: 30px;
    align-items: center;
    margin-top: 16px;
  }
  .authorDetail {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  .authorName {
    font-family: var(--font-noto-sans-jp);
    font-size: 32px;
    font-weight: bold;
    line-height: 1;
    letter-spacing: 0.04em;
  }
  .authorMessageSp {
    display: none;
  }
  .authorMessagePc {
    padding: 16px 24px;
    background-color: var(--bg-dark);
    border-radius: 12px;
  }
  .messageTitle {
    font-size: 20px;
    font-weight: bold;
  }
  .messageDetail {
    margin-top: 12px;
    font-family: var(--font-noto-sans-jp);
    font-size: 12px;
    line-height: 1.8;
    letter-spacing: 0.02em;
  }
  .messageDetailItem {
    display: block;
    margin-top: 4px;
  }
  .organizers {
    display: flex;
    gap: 8px;
    margin-top: 8px;
  }
  .organizer {
    display: flex;
    flex: 0 0 calc(100% / 3 - 6px);
    gap: 16px;
    padding: 8;
    background-color: var(--bg-dark);
    border-radius: 12px;
  }
  .organizerIcon {
    border-radius: 8px;
  }
  .organizerDetail {
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 100%;
  }
  .organizerName {
    font-size: 18px;
    font-weight: bold;
  }
  .organizerId {
    font-family: var(--font-noto-sans-jp);
    font-size: 12px;
  }
  .snsLinksWrapper {
    margin-top: 12px;
  }

  @media (--breakpoint-sp) {
    .organizerType {
      margin-top: 22px;
    }
    .authorInfo {
      padding: 16px;
      background-color: var(--bg-dark);
      border-radius: 12px;
    }
    .organizerIcon {
      width: 120px;
      height: 120px;
    }
    .authorName {
      font-size: 18px;
    }
    .authorMessageSp {
      display: block;
      padding: 16px 24px;
      margin-top: 16px;
      background-color: var(--bg-dark);
      border-radius: 12px;
    }
    .authorMessagePc {
      display: none;
    }
    .organizers {
      flex-direction: column;
      gap: 8px;
    }
  }
</style>
